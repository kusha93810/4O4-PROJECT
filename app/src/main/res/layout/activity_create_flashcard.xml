<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- EditText for entering the question -->
    <EditText
        android:id="@+id/questionEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter the question"
        android:inputType="text" />

    <!-- EditText for entering the answer -->
    <EditText
        android:id="@+id/answerEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter the answer"
        android:inputType="text" />

    <!-- Button to save the flashcard -->
    <Button
        android:id="@+id/saveFlashcardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Flashcard"
        android:layout_marginTop="16dp"/>
</LinearLayout>
